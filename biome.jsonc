{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "useEditorconfig": true,
    "lineWidth": 100
  },
  "linter": {
    "domains": {
      "project": "all",
      "test": "all"
    },
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": "error",
        "noForEach": "error",
        "noImplicitCoercions": "error",
        "noUselessStringConcat": "error",
        "noVoid": "error",
        "useSimplifiedLogicExpression": "error",
        "useWhile": "error"
      },
      "correctness": {
        "noGlobalDirnameFilename": "error",
        "noProcessGlobal": "error",
        "noUndeclaredVariables": "error",
        "useImportExtensions": {
          "level": "error",
          "options": {
            "forceJsExtensions": true
          }
        },
        "useSingleJsDocAsterisk": "error"
      },
      "nursery": {
        "noUnresolvedImports": "off"
      },
      "performance": {
        "noAwaitInLoops": "error",
        "noDelete": "error",
        "useTopLevelRegex": "error"
      },
      "style": {
        "noCommonJs": "error",
        // noDoneCallback flags on Vite context ?
        "noDoneCallback": "error",
        "noExportedImports": "error",
        "noInferrableTypes": "error",
        "noNamespace": "error",
        "noNegationElse": "error",
        "noNestedTernary": "error",
        "noSubstr": "error",
        "noUnusedTemplateLiteral": "error",
        "noYodaExpression": "error",
        "useAsConstAssertion": "error",
        "useBlockStatements": "error",
        "useConsistentArrayType": "error",
        "useDefaultParameterLast": "error",
        "useDefaultSwitchClause": "error",
        "useForOf": "error",
        "useGroupedAccessorPairs": "error",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false
          }
        },
        "useNumberNamespace": "error",
        "useNumericSeparators": "error",
        "useObjectSpread": "error",
        "useShorthandAssign": "error",
        "useSingleVarDeclarator": "error",
        "useSymbolDescription": "error",
        "useThrowNewError": "error",
        "useThrowOnlyError": "error",
        "useTrimStartEnd": "error",
        "useUnifiedTypeSignatures": "error"
      },
      "suspicious": {
        "noAlert": "error",
        "noBitwiseOperators": "error",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["assert", "error", "info", "warn"]
          }
        },
        "noConstantBinaryExpressions": "error",
        "noEmptyBlockStatements": "error",
        "noEvolvingTypes": "error",
        "noMisplacedAssertion": "error",
        "noSkippedTests": "error",
        "noUnassignedVariables": "error",
        "noVar": "error",
        // useAwait incorrectly flags cases when a promise is returned
        // https://github.com/biomejs/biome/issues/1161
        "useAwait": "off",
        "useErrorMessage": "error",
        "useGuardForIn": "error",
        "useNumberToFixedDigitsArgument": "error",
        "useStaticResponseMethods": "error",
        "useStrictMode": "error"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedProperties": "on"
      }
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "overrides": [
    {
      "includes": ["**/tests/**"],
      "linter": {
        "rules": {
          "performance": {
            // useTopLevelRegex is unreasonable for test cases
            "useTopLevelRegex": "off"
          }
        }
      }
    }
  ]
}
